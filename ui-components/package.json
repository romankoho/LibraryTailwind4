{
  "name": "ui-components",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "./dist/ui-components.umd.js",
  "module": "./dist/ui-components.es.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/ui-components.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ui-components.es.js",
      "require": "./dist/ui-components.umd.js"
    },
    "./dist/ui-components.css": "./dist/ui-components.css"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build",
    "build:lib": "tsc && vite build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix",
    "lint:fix": "eslint . --ext .ts,.tsx --no-error-on-unmatched-pattern --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,mdx}\"",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/recommended",
      "plugin:@typescript-eslint/recommended",
      "eslint-config-prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ],
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "react/jsx-key": "off",
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "warn"
    },
    "ignorePatterns": [
      "node_modules/",
      "vitest/",
      "dist/",
      ".prettierrc.js",
      ".eslintrc.js",
      "env.d.ts"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": false,
    "trailingComma": "none"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --ext .ts,.tsx --no-error-on-unmatched-pattern --quiet"
    ],
    "src/**/*.{js,jsx,ts,tsx,css,scss,md}": "prettier --check"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.3",
    "@tailwindcss/vite": "^4.1.4",
    "classnames": "^2.5.1",
    "react": "^18.3.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@phosphor-icons/react": "^2.1.7",
    "@storybook/addon-essentials": "8.4.7",
    "@storybook/addon-interactions": "8.4.7",
    "@storybook/addon-links": "8.4.7",
    "@storybook/addon-themes": "8.4.7",
    "@storybook/blocks": "8.4.7",
    "@storybook/react": "8.4.7",
    "@storybook/react-vite": "8.4.7",
    "@storybook/testing-library": "0.2.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@testing-library/react": "14.0.0",
    "@types/node": "20.4.9",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "3.1.1",
    "autoprefixer": "10.4.14",
    "babel-loader": "9.1.3",
    "eslint": "8.46.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "37.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "16.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "0.6.13",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "json": "11.0.0",
    "lint-staged": "13.2.3",
    "lucide-react": "^0.488.0",
    "postcss": "8.4.49",
    "postcss-nesting": "^13.0.1",
    "prettier": "3.0.1",
    "prop-types": "15.8.1",
    "storybook": "^8.6.12",
    "typescript": "5.1.6",
    "vite": "^6.3.0",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.1"
  }
}
